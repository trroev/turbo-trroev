{
  "name": "@trroev/ui",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/components/*/index.ts",
    "./cn": "./src/utils/cn.ts",
    "./icons/*": "./src/icons/*/*.tsx",
    "./postcss": "./postcss.config.js",
    "./styles.css": "./src/styles/index.css"
  },
  "scripts": {
    "add": "pnpm dlx shadcn-ui@latest add",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint src/ --format json --output-file ../../lint-results/ui.json",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@trroev/prettier-config",
  "eslintConfig": {
    "extends": [
      "@trroev/eslint-config/base",
      "@trroev/eslint-config/react"
    ],
    "overrides": [
      {
        "files": [
          "./src/components/**/*.stories.tsx"
        ],
        "rules": {
          "jsx-a11y/anchor-is-valid": "off"
        }
      }
    ],
    "ignorePatterns": [
      "turbo/**"
    ],
    "root": true
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "react": "catalog:next14",
    "react-dom": "catalog:next14",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@axa-ch/react-polymorphic-types": "^1.2.5",
    "@storybook/react": "^8.2.9",
    "@trroev/eslint-config": "workspace:*",
    "@trroev/tailwind-config": "workspace:*",
    "@trroev/tsconfig": "workspace:*",
    "@types/react": "catalog:next14or15",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2"
  }
}
