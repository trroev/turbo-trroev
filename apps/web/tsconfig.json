{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "esnext",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "exclude": ["node_modules"],
  "extends": "@trroev/tsconfig/base.json",
  "include": [".", ".next/types/**/*.ts"]
}
